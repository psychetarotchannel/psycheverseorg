# Psycheverse Admin Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret (change this in production!)
JWT_SECRET=psycheverse-admin-secret-key-change-this-in-production

# Database
DATABASE_PATH=./psycheverse.db

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# API Keys for Live Status Polling
YOUTUBE_API_KEY=your_youtube_api_key_here
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# Mailchimp Integration (optional)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here

# CORS Settings
CORS_ORIGIN=http://localhost:3000,https://psycheverse.org

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Admin Settings
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@psycheverse.org
DEFAULT_ADMIN_PASSWORD=admin123
